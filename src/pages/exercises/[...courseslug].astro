---
import { getEntry } from 'astro:content'
import BaseLayout from '../../layouts/Base.astro'
import Breadcrumb from '../../components/Breadcrumb.astro'
import Prose from '../../components/Prose.astro'
import { getGroupedStaticPaths } from '../../utils/collection'
import { removeStripes } from '../../utils/string'

import type { CollectionEntry } from 'astro:content'

export async function getStaticPaths() {
    const groupedEntries = await getGroupedStaticPaths(
        'exercises', 
        (slug) => {
            const splittedSlug = slug.split('/')
            return splittedSlug.splice(0, splittedSlug.length - 1).join('/')
        }
    )

    return groupedEntries.map(groupedEntry => ({
        params: {
            courseslug: groupedEntry.params.group,
        },
        props: {
            ...groupedEntry.props,
            slug: groupedEntry.params.group
        }
    }))
}

interface Props {
  entries: CollectionEntry<'exercises'>[]
  slug: string
}

const { entries, slug } = Astro.props;
const splitSlug = slug.split('/')
const courseSlug = splitSlug[splitSlug.length - 1]
const levelTitle = removeStripes(splitSlug[0])

const pageEntry = await getEntry('courses', courseSlug)
// @ts-expect-error dynamic course slug
const { Content } = await pageEntry.render()

const title = removeStripes(courseSlug)
---

<BaseLayout>
	<div class="max-w-screen-lg mx-auto px-4 relative">
        <Breadcrumb path={`exercises/${slug}`} class="py-2 my-4" />

        <article class="mt-8">
            <header class="flex flex-col mb-10">
                <div class="mb-4">
                    <span class="text-sm px-2 py-1 rounded-xl bg-slate-200 capitalize font-semibold">{levelTitle}</span>
                </div>
                <h1 class="text-4xl font-bold text-purple-800 capitalize">{title}</h1>
            </header>

            <Prose>
                <Content />
            </Prose>
        </article>

        <nav class="mt-12 mb-20">
            <ol class="grid grid-cols-2 gap-6">
                {
                    entries.map(entry => (
                        <li>
                            <a href={`/exercises/${entry.slug}`} class="block p-6 text-lg font-semibold bg-white border border-gray-200 rounded-lg shadow hover:bg-purple-100">{entry.data.title}</a>
                        </li>
                    ))
                }
            </ol>
        </nav>
    </div>
</BaseLayout>