---
interface Props {
  variant?: "note" | "tip" | "warning";
}

const { variant = "note" } = Astro.props;
const title = {
  note: "📝 Catatan",
  tip: "💡 Tips",
  warning: "🚧 Perhatian",
};
const borderColor = {
  note: "border-blue-600",
  tip: "border-green-600",
  warning: "border-yellow-600",
};
const bgColor = {
  note: "bg-blue-50",
  tip: "bg-green-50",
  warning: "bg-yellow-50",
};
---

<aside
  class:list={[
    "my-5 px-4 border rounded-lg",
    borderColor[variant],
    bgColor[variant],
  ]}
>
  <p
    class="capitalize font-semibold text-lg md:text-xl font-heading text-gray-900"
  >
    {title[variant]}
  </p>
  <slot />
</aside>
