---
import { linkTo } from "../utils/url";

interface Props {
  variant?: "xl" | "lg" | "md";
  class?: string;
}

const { variant = "md", class: customClass = "" } = Astro.props;
---

<a
  href={linkTo("")}
  class:list={[
    "inline-flex font-extrabold text-purple-900 rounded-md -skew-y-3 hover:-skew-y-1 py-1 font-heading tracking-tighter",
    { "text-lg": variant === "lg" },
    { "text-xl": variant === "xl" },
    customClass,
  ]}
>
  Ayo Ngulik<span class="text-amber-500 text-[1.15em]">!</span>
</a>
